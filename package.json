{
  "name": "MyApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "yarn storybook | react-native start",
    "start-reset": "yarn storybook | react-native start --resetCache",
    "test": "jest",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "prettier": "prettier all --write \"src/**/*.{ts,tsx}\"",
    "tsc": "tsc --noEmit --skipLibCheck",
    "prestorybook": "rnstl",
    "storybook": "storybook start -p 7007 -c src/core/storybook"
  },
  "config": {
    "react-native-storybook-loader": {
      "searchDir": [
        "./src"
      ],
      "pattern": "**/*.stories.tsx",
      "outputFile": "./src/core/storybook/storyLoader.js"
    }
  },
  "dependencies": {
    "@types/react-navigation": "^3.0.5",
    "axios": "^0.18.0",
    "react": "16.8.3",
    "react-native": "0.59.1",
    "react-native-gesture-handler": "1.1.0",
    "react-navigation": "3.3.2",
    "styled-components": "^4.1.3",
    "styled-tools": "^1.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/runtime": "^7.3.4",
    "@storybook/addon-options": "^5.0.2",
    "@storybook/react-native": "^4.1.14",
    "@types/jest": "^24.0.11",
    "@types/react": "^16.8.8",
    "@types/react-native": "^0.57.40",
    "@types/react-test-renderer": "^16.8.1",
    "babel-jest": "^24.5.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-styled-components": "^1.10.0",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "metro-react-native-babel-preset": "^0.53.1",
    "prettier": "1.16.4",
    "react-native-storybook-loader": "^1.8.0",
    "react-native-typescript-transformer": "^1.2.12",
    "react-test-renderer": "16.8.3",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3333"
  },
  "resolutions": {
    "react-native-gesture-handler": "1.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn tslint && yarn tsc && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --parser typescript --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ],
    "cacheDirectory": ".jest/cache"
  }
}
